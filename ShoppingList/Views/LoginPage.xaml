<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.LoginPage" Title="Login">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Label Text="Login Info" FontSize="Large" />
            <Border Stroke="Gray" StrokeThickness="1" Margin="15,15,0,0">
                <Entry Placeholder="Enter Username" />
            </Border>
            <Border Stroke="Gray" StrokeThickness="1" Margin="15,15,0,0">
                <Entry Placeholder="Enter Password" />
            </Border>
            <Button Text="Login" Margin="0,30" Clicked="Login_OnClicked"/>
            <Button Text="Create Account" BackgroundColor="Green"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>